<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/resultshape"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textSize="35dp" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="5"
            app:rowCount="6">


            <Button
                android:id="@+id/buMC"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="MC"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buMR"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="MR"
                android:textSize="17dp" />
            <Button
                android:id="@+id/buMS"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="MS"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buMplus"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="M+"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buMneg"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="M-"
                android:textSize="17dp" />


            <Button
                android:id="@+id/buArrow"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="←"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buSQRT"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="√"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buC"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="C"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buCE"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="CE"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu_Pos_or_neg"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="±"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu7"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="7"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="8"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="9"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buDivision"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="÷"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buPersent"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="%"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu4"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="4"
                android:textSize="17dp" />


            <Button
                android:id="@+id/bu5"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="5"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="6"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="×"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu_one_div_x"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="1/×"
                android:textSize="17dp" />


            <Button
                android:id="@+id/bu1"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="1"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="2"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="3"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="-"
                android:textSize="17dp" />

            <Button
                android:id="@+id/buEqual"
                android:layout_width="72dp"
                android:layout_height="116dp"
                android:background="@drawable/buttonshape"
                android:text="="
                android:textSize="17dp"
                app:layout_rowSpan="2" />

            <Button
                android:id="@+id/bu0"
                android:layout_width="144dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="0"
                android:textSize="17dp"
                app:layout_columnSpan="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="."
                android:textSize="17dp" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:background="@drawable/buttonshape"
                android:text="+"
                android:textSize="17dp" />


        </android.support.v7.widget.GridLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>